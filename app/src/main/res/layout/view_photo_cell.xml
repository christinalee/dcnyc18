<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="1dp"
>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/view_photo_cell_image_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:adjustViewBounds="true"
        tools:background="@color/colorAccent"
        tools:layout_height="260dp"
    />

    <View
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/view_photo_cell_heart_icon"
        android:background="@drawable/heart_unselected"
        app:layout_constraintBottom_toBottomOf="@id/view_photo_cell_image_view"
        app:layout_constraintEnd_toEndOf="@id/view_photo_cell_image_view"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
    />

</android.support.constraint.ConstraintLayout>